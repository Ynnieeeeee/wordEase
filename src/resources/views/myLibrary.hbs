<div class="container">
    <div class="bg-[#F9FBE6] w-full">
        <div class="ml-8">
            <h3 class="text-3xl font-extrabold bg-gradient-to-t from-[#F49BAB] to-[#7F55B1] bg-clip-text text-transparent leading-10">My library</h3>
            <span class="text-xl font-semibold bg-gradient-to-l from-[#F49BAB] to-[#7F55B1] bg-clip-text text-transparent leading-9">Nothing is impossible</span>
        </div>
    </div>
    <div class="library separate ml-8 mt-5">
        <ul class="flex space-x-8">
            <li class="relative group">
                <a href="/myLibrary" class="text-xl font-normal text-purple-800">Học phần</a>
                <span class="absolute left-0 top-[30px] w-full h-[1px] bg-purple-800 transition-colors duration-300"></span>
            </li>
        </ul>
    </div>
    <div class="mt-8 mx-5 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {{#each sets}}
        <div class="w-[290px] border-solid rounded-md shadow-2xl border-inherit border bg-white">
            <div class="text-center my-4">
                <div class="mb-4">
                    <h3 class="text-2xl font-bold bg-gradient-to-t from-[#F49BAB] to-[#7F55B1] bg-clip-text text-transparent">{{this.set_name}}</h3>
                </div>
                <div class="mb-4">
                    <span class="text-xs font-medium">{{this.description}}</span>
                </div>
                <div>

                    <a href="/sets/{{this.slug}}" class="px-4 py-2 bg-gradient-to-r from-[#CDC1FF] to-[#F49BAB] rounded-3xl font-medium">Học ngay</a>

                </div> 
            </div>
        </div>
        {{/each}}
    </div>
</div>